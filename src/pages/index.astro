---
import imageDark from '@/assets/pages/home-dark.png'
import imageLight from '@/assets/pages/home-light.png'
import HeroSection from '@/components/blocks/HeroSection.astro'
import News from '@/components/blocks/News.astro'
import { SITE } from '@/config.mjs'
import Layout from '@/layouts/Layout.astro'

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true
}
---

<Layout {meta}>
  <main>
    <HeroSection
      id="home"
      title="SV Eutingen"
      description="Willkommen beim SV Eutingen - Dein Verein für Sport und Gemeinschaft in Eutingen im Gäu. Entdecke unser umfangreiches Sportangebot für Jung und Alt."
      primaryButton={{ label: 'Aktuelles', to: '#aktuelles' }}
      secondaryButton={{ label: 'Mach mit', to: '#mach-mit' }}
      image={{ light: imageLight, dark: imageDark, alt: 'fussballfeld auf dem gespielt wird' }}
    />
    <News id="aktuelles" />
  </main>
</Layout>
