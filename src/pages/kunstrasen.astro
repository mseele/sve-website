---
import imageDark from '@/assets/pages/kunstrasen-dark.jpg'
import imageLight from '@/assets/pages/kunstrasen-light.jpg'
import HeroSection from '@/components/blocks/HeroSection.astro'
import Container from '@/components/common/Container.astro'
import Layout from '@/layouts/Layout.astro'
import type { MetaSEO } from '@/types'
import { Content as Details } from '@/markdown/kunstrasen.md'
import Prose from '@/components/common/Prose.astro'
import Button from '@/components/controls/Button.astro'

const meta: MetaSEO = {
  title: 'Kunstrasen',
  description:
    'Miete den modernen Kunstrasenplatz des SV Eutingen für dein Training oder deine Spiele. Das Spielfeld mit LED-Flutlicht bietet ideale Bedingungen bei jedem Wetter. Sieh dir unsere Tarife an und buche noch heute deinen Termin für ungestörtes Sportvergnügen.',
  image: imageLight
}
---

<Layout {meta}>
  <HeroSection
    id="home"
    title="Kunstrasen Vermietung"
    description="Miete den modernen Kunstrasenplatz des SV Eutingen für dein Training oder deine Spiele. Das Spielfeld mit LED-Flutlicht bietet ideale Bedingungen bei jedem Wetter."
    primaryButton={{ label: 'Details', to: '#details' }}
    secondaryButton={{ label: 'Buchung', to: '#buchung' }}
    image={{ light: imageLight, dark: imageDark, alt: 'kunstrasenplatz des sv eutingen' }}
  />
  <div class="pb-16 pt-6">
    <Container>
      <p class="text-gray-600 dark:text-gray-300">
        Seit 2018 verfügen wir über eine hochmoderne Sportanlage mit einem Kunstrasengroß- und
        Kleinspielfeld inklusive LED-Flutlicht. Der Sportbereich mit vier geschlechtergetrennten
        Kabinen und separaten Räumen für Schiedsrichter bietet optimale Spielbedingungen auch in
        Zeiten von Schnee, Regen oder Frost. Gerne stellen wir Eurem Team den großen Kunstrasenplatz
        (100 x 70 Meter) für eine Trainings- oder Spieleinheit zur Verfügung, wenn die Anlage nicht
        durch unsere vielen eigenen Teams genutzt wird.
      </p>
    </Container>
  </div>
  <div class="pb-10 pt-6" id="details">
    <Container>
      <div class="text-gray-600">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white md:text-4xl lg:text-5xl">
          Details
        </h2>
        <div class="mt-12 text-gray-600 dark:text-gray-300">
          <Prose>
            <Details />
          </Prose>
        </div>
      </div>
    </Container>
  </div>
  <div class="pb-10 pt-6" id="buchung">
    <Container>
      <div class="text-gray-600">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white md:text-4xl lg:text-5xl">
          Buchung
        </h2>
        <p class="mt-12 text-gray-600 dark:text-gray-300">
          Freie Buchungstermine für eine konkrete Anfrage entnehmt Ihr dem <a
            class="underline duration-300 hover:text-primary dark:hover:text-white"
            href="#belegung">Belegungskalender</a
          >.
          <br />
          Im Falle einer erfolgreichen Buchung erhaltet Ihr eine schriftliche Bestätigung inkl. der zu
          beachtenden Platzordnung.
          <br />
          <br />
          <Button emphasis="primary" href="/kontakt?auswahl=kunstrasen#contact-card">
            Buchung
          </Button>
        </p>
      </div>
    </Container>
  </div>
  <div class="pt-6" id="belegung">
    <Container>
      <div class="text-gray-600">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white md:text-4xl lg:text-5xl">
          Belegungskalender
        </h2>
        <div class="mt-12 text-gray-600 dark:text-gray-300">
          <div class="responsive-iframe-container hidden sm:block">
            <iframe
              class="dark:hidden"
              src="https://calendar.google.com/calendar/embed?wkst=1&bgcolor=%23FFFFFF&ctz=Europe%2FBerlin&showTitle=0&showNav=1&showDate=1&showPrint=0&showTabs=1&showCalendars=0&showTz=1&src=a3Vuc3RyYXNlbkBzdi1ldXRpbmdlbi5kZQ&color=%23039BE5"
              style="border-width: 0"
              frameborder="0"
              scrolling="no"></iframe>
            <iframe
              class="hidden dark:block"
              src="https://calendar.google.com/calendar/embed?wkst=1&bgcolor=%23E3E9FF&ctz=Europe%2FBerlin&showTitle=0&showNav=1&showDate=1&showPrint=0&showTabs=1&showCalendars=0&showTz=1&src=a3Vuc3RyYXNlbkBzdi1ldXRpbmdlbi5kZQ&color=%23039BE5"
              style="border-width: 0"
              frameborder="0"
              scrolling="no"></iframe>
          </div>
          <div class="grid justify-center sm:hidden">
            <iframe
              class="h-[400px] dark:hidden"
              src="https://calendar.google.com/calendar/embed?wkst=1&bgcolor=%23FFFFFF&ctz=Europe%2FBerlin&showTitle=0&showNav=1&showDate=1&showPrint=0&showTabs=0&showCalendars=0&showTz=1&src=a3Vuc3RyYXNlbkBzdi1ldXRpbmdlbi5kZQ&color=%23039BE5&mode=AGENDA"
              style="border-width: 0"
              frameborder="0"
              scrolling="no"></iframe>
            <iframe
              class="hidden h-[400px] dark:block"
              src="https://calendar.google.com/calendar/embed?wkst=1&bgcolor=%23E3E9FF&ctz=Europe%2FBerlin&showTitle=0&showNav=1&showDate=1&showPrint=0&showTabs=0&showCalendars=0&showTz=1&src=a3Vuc3RyYXNlbkBzdi1ldXRpbmdlbi5kZQ&color=%23039BE5&mode=AGENDA"
              style="border-width: 0"
              frameborder="0"
              scrolling="no"></iframe>
          </div>
        </div>
      </div>
    </Container>
  </div>
</Layout>

<style>
  .responsive-iframe-container {
    position: relative;
    padding-bottom: 56.25%;
    padding-top: 30px;
    height: 0;
    overflow: hidden;
  }

  .responsive-iframe-container iframe,
  .vresponsive-iframe-container object,
  .vresponsive-iframe-container embed {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
