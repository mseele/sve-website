---
import { SITE } from '@/config.mjs'
import { type MetaSEO } from '@/types'
import { AstroSeo } from '@astrolib/seo'
import { getImage } from 'astro:assets'

export interface Props extends MetaSEO {
  dontUseTitleTemplate?: boolean
}

const getCanonical = (path = ''): string | URL => {
  const url = String(new URL(path, Astro.site))
  if (SITE.trailingSlash == false && path && url.endsWith('/')) {
    return url.slice(0, -1)
  } else if (SITE.trailingSlash == true && path && !url.endsWith('/')) {
    return url + '/'
  }
  return url
}

const {
  title = SITE.name,
  description = '',
  image: imageMetadata = SITE.defaultImage,

  noindex = false,
  nofollow = false,
  canonical = String(getCanonical(Astro.url.pathname)),

  ogTitle = title,
  ogType = 'website',
  ogLocale = `${SITE.language}_DE`,

  dontUseTitleTemplate = false,
} = Astro.props

const image =
  imageMetadata !== undefined
    ? new URL(
        (
          await getImage({
            src: imageMetadata,
            width: 1200,
            height: 628,
          })
        ).src,
        Astro.site,
      )
    : null
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
{/* TODO: move back to AstroSeo when https://github.com/onwidget/astrolib/issues/19 is fixed */}
<link data-pagefind-meta="url[href]" rel="canonical" href={canonical} />
<AstroSeo
  title={title}
  titleTemplate={dontUseTitleTemplate ? '%s' : `%s â€” ${SITE.name}`}
  description={description}
  noindex={noindex}
  nofollow={nofollow}
  openGraph={{
    url: canonical,
    title: ogTitle,
    description: description,
    type: ogType,
    locale: ogLocale,
    images: image
      ? [
          {
            url: image.toString(),
            alt: ogTitle,
          },
        ]
      : undefined,
  }}
/>

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="mask-icon" href="/favicon.svg" color="#FFFFFF" />
<link rel="sitemap" href="/sitemap-index.xml" />
