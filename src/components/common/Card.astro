---
interface Props {
  class?: string
  hover?: boolean
}

const { class: className, hover } = Astro.props
---

<div
  class:list={[
    'relative overflow-hidden rounded-2xl bg-gradient-to-b from-gray-200 to-white p-px dark:from-gray-700 dark:via-gray-800 dark:to-darker',
    className
  ]}
>
  <div
    class={`relative flex h-full flex-col gap-6 rounded-2xl bg-gray-100 p-8 dark:bg-gray-900${hover === true ? ' hover:bg-gray-200 hover:dark:bg-gray-800' : ''}`}
  >
    <slot />
  </div>
</div>
