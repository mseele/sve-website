---
interface Props {
  class?: string
  hover?: boolean
}

const { class: className, hover } = Astro.props
---

<div
  class:list={[
    'dark:to-darker relative overflow-hidden rounded-2xl bg-linear-to-b from-gray-200 to-white p-px dark:from-gray-700 dark:via-gray-800',
    className,
  ]}
>
  <div
    class={`relative flex h-full flex-col gap-6 rounded-2xl bg-gray-100 p-8 dark:bg-gray-900${hover === true ? ' hover:bg-gray-200 dark:hover:bg-gray-800' : ''}`}
  >
    <slot />
  </div>
</div>
